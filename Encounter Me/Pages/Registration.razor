@page "/register"
<h3>Registration</h3>

<EditForm Model="@userModel" OnValidSubmit="CreateNewUser">
    <DataAnnotationsValidator />
    <div class="col-md-6 mb-3">
        <label for="Username">User Name</label>
        <InputText id="Username" placeholder="Adventurous City Explorer" @bind-Value="userModel.UserName" class="form-control" />
        <ValidationMessage For="@(() => userModel.UserName)"/>
    </div>
    <div class="col-md-6 mb-3">
        <label for="FirstName">First Name</label>
        <InputText id="FirstName" placeholder="Name" @bind-Value="userModel.FirstName" class="form-control" />
        <ValidationMessage For="@(() => userModel.FirstName)" />
    </div>
    <div class="col-md-6 mb-3">
        <label for="LastName">Last Name</label>
        <InputText id="LastName" placeholder="Surname" @bind-Value="userModel.LastName" class="form-control" />
        <ValidationMessage For="@(() =>  userModel.LastName)" />
    </div>
    <div class="col-md-6 mb-3">
        <label for="Email">Email</label>
        <InputText id="Email" placeholder="NameSurname@myMail.com" @bind-Value="userModel.Email" class="form-control" />
        <ValidationMessage For="@(() => userModel.Email)" />
    </div>
    <div class="col-md-6 mb-3">
        <label for="Password">Password</label>
        <InputText id ="Password" type="password" placeholder="SuperStrongPassword1" @bind-Value="@userModel.Password" class="form-control" />
        <ValidationMessage For="@(() => userModel.Password)" />
    </div>
    <div class="col-md-6 mb-3">
        <label for="Confirm password">Confirm password</label>
        <InputText id ="Confirm Password"type="password" placeholder="SuperStrongPassword1" @bind-Value="@userModel.Password" class="form-control" />
        <ValidationMessage For="@(() =>  userModel.ConfirmPassword)" />
    </div>


    <button type="submit" class="btn btn-primary">Register</button>

</EditForm>

