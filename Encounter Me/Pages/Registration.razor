@page "/Create account"

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card mt-10 mb-10">
            <div class="card-header">
                <h2>User Registration</h2>
            </div>
            <div class="card-body">
                <EditForm Model="@userModel" OnValidSubmit="CreateNewUser" autocomplete ="off">
                    <DataAnnotationsValidator />
                    <div class="col-md-12 mb-3">
                        <label for="Username">User Name</label>
                        <InputText id="Username" placeholder="Enter Username" @bind-Value="userModel.UserName" class="form-control"/>
                        <ValidationMessage For="@(() => userModel.UserName)"/>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="FirstName">First Name</label>
                        <InputText id="FirstName" placeholder="Enter Name" @bind-Value="userModel.FirstName" class="form-control" />
                        <ValidationMessage For="@(() => userModel.FirstName)"/>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="LastName">Last Name</label>
                        <InputText id="LastName" placeholder="Enter Surname" @bind-Value="userModel.LastName" class="form-control" />
                        <ValidationMessage For="@(() =>  userModel.LastName)"/>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="Email">Email</label>
                        <InputText id="Email" placeholder="Enter Email" @bind-Value="userModel.Email" class="form-control" />
                        <ValidationMessage For="@(() => userModel.Email)"/>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="Password">Password</label>
                        <InputText id="Password"  placeholder="Enter Password" type="password" @bind-Value="userModel.Password" class="form-control" />
                        <ValidationMessage For="@(() => userModel.Password)"/>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="Confirm password">Confirm password</label>
                        <InputText id="Confirm Password"  placeholder="Repeat Password" type="password" @bind-Value="userModel.ConfirmPassword" class="form-control" />
                        <ValidationMessage For="@(() =>  userModel.ConfirmPassword)"/>
                    </div>

                    <div class="form-group" align="left">
                        <div class="col-md-12 mb-3">
                            <button type="submit" class="btn btn-primary">Sign up</button>
                        </div>
                    </div>

</EditForm>
            </div>
        </div>
    </div>
</div>

@code {

    UserRegistrationModel userModel = new UserRegistrationModel();

    void CreateNewUser()
    {
        Console.WriteLine("New user name is...");
        var hashSalt = PasswordManager.EncryptPassword(userModel.Password);
        var newUser = new UserData(
            id: 0,
            userName:userModel.UserName,
            firstName: userModel.FirstName,
            lastName: userModel.LastName,
            email: userModel.Email,
            password: hashSalt.Hash,
            salt: hashSalt.Salt);


        Console.WriteLine($"Name: {newUser.FirstName}\n " +
                          $"Surname: {newUser.LastName}\n" +
                          $"Email: {newUser.Email}\n" +
                          $"Password: {newUser.Password}\n" +
                          $"Salt: {newUser.StoredSalt}\n");
    }

