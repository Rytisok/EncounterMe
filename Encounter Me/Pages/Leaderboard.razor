@page "/leaderboard"
@attribute [Authorize]

<h1 class="page title">Leaderboard</h1>




    @if (Users == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Level</th>
                    <th>Xp</th>
                    <th>Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Users)
                {
                    <tr>
                        <td><img src=@user.UserPhotoUrl width="100" height="100"/></td>                 
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Level</td>
                        <td>@user.ExperiencePoints</td>
                        <td>
                            <a href="@($"profile/{user.Id}")" class="btn btn-primary table-btn">
                                
                            </a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
