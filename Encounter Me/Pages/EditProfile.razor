@page "/EditProfile/{Id}"

<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">  </h1>
    <hr>
    <div class="row">

            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src=@User.UserPhotoUrl class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6> </h6>
                    <label class="col-lg-3 control-label">@User.UserName</label>
                </div>
            </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <h3>User Info</h3>

            <form class="form-horizontal" role="form">

                <!--<div class="form-group">
        <label class="col-lg-3 control-label">Username:</label>
        <div class="col-lg-8">
            <input class="form-control" type="text" @bind=@User.UserName />
        </div>
    </div>-->
                <div class="form-group">
                    <label class="col-lg-3 control-label">First name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" @bind=@User.FirstName />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" @bind=@User.LastName />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" @bind=@User.Email />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Photo URL:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" @bind=@User.UserPhotoUrl />
                    </div>
                </div>
                <input type="submit" class="profile-edit-btn" @onclick=@HandleValidSubmit name="btnAddMore" value="Save" style="margin-top:60px" />
            </form>
        </div>
    </div>
</div>
<hr>

